{
  "name": "@pomodorise/backend",
  "version": "1.0.0",
  "description": "PomodoRise - Backend API con Express, MongoDB y TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "pomodoro",
    "api",
    "express",
    "typescript"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "dotenv": "^17.2.3",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "mongoose": "^8.19.1",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "@pomodorise/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "typescript": "^5.9.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.10",
    "jest": "^30.2.0",
    "@types/jest": "^30.0.0",
    "ts-jest": "^29.4.5",
    "supertest": "^7.1.4",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.37.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0"
  }
}
