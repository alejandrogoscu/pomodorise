{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["jest", "node"],

    // Paths espec√≠ficos del backend
    "baseUrl": ".",
    "paths": {
      "@pomodorise/shared": ["../shared/src"],
      "@pomodorise/shared/*": ["../shared/src/*"],
      "@/config/*": ["./src/config/*"],
      "@/models/*": ["./src/models/*"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/services/*": ["./src/services/*"],
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/routes/*": ["./src/routes/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../shared" }]
}
